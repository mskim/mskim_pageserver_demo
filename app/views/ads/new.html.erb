<h1>New ad</h1>

<% form_tag ads_path, :method=> 'get' do %> 


	<% if @searchSelected=='Material Description' %> 
		<%= select_tag "searchSelect", options_for_select([ "Order", "Material Description","Material No.","Brand","Pattern","Status" ], "Material Description") %>
	<% elsif @searchSelected=="Material No."%> 
		<%= select_tag "searchSelect", options_for_select([ "Order", "Material Description","Material No.","Brand","Pattern","Status" ], "Material No.") %>
	<% elsif @searchSelected=='Brand'%> 
		<%= select_tag "searchSelect", options_for_select([ "Order", "Material Description","Material No.","Brand","Pattern","Status" ], "Brand") %>
	<% elsif @searchSelected=='Pattern'%> 
		<%= select_tag "searchSelect", options_for_select([ "Order", "Material Description","Material No.","Brand","Pattern","Status" ], "Pattern") %>
	<% elsif @searchSelected=='Status'%> 
		<%= select_tag "searchSelect", options_for_select([ "Order", "Material Description","Material No.","Brand","Pattern","Status" ], "Status") %>	<% else %> 
		<%= select_tag "searchSelect", options_for_select([ "Order", "Material Description","Material No.","Brand","Pattern","Status" ], "Order") %>
	<% end%> 

<% end %>

